{
    "name": "ethan2106/brickphp",
    "description": "ðŸŽï¸ BrickPHP SUPERCAR - Lightweight MVC Framework for PHP 8.1+",
    "type": "project",
    "license": "MIT",
    "keywords": ["framework", "mvc", "php", "router", "pdo", "security", "twig", "alpine", "tailwind"],
    "authors": [
        {
            "name": "Ethan",
            "email": "ethan@brickphp.dev"
        }
    ],
    "require": {
        "php": ">=8.1",
        "twig/twig": "^3.8",
        "symfony/http-foundation": "^6.4",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "infection/infection": "^0.27",
        "squizlabs/php_codesniffer": "^3.8",
        "phpmd/phpmd": "^2.15",
        "friendsofphp/php-cs-fixer": "^3.48"
    },
    "autoload": {
        "psr-4": {
            "BrickPHP\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=8",
        "infection": "infection --min-msi=93 --min-covered-msi=93 --threads=4",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "phpmd": "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test",
            "@infection",
            "@phpmd"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
